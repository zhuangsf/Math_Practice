{
  "name": "math-practice",
  "version": "1.0.0",
  "description": "小学数学四则运算出题工具",
  "author": "Math Practice Team",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win --x64 --ia32",
    "electron:build:win:portable": "npm run build && electron-builder --win portable --x64 --ia32"
  },
  "dependencies": {
    "element-plus": "^2.6.0",
    "jspdf": "^2.5.1",
    "vue": "^3.4.21",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.17",
    "electron": "^10.4.7",
    "electron-builder": "^22.14.13",
    "happy-dom": "^13.3.8",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.0.6"
  },
  "build": {
    "appId": "com.mathpractice.app",
    "productName": "小学数学出题工具",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.dll",
      "**/*.pak",
      "**/*.dat",
      "**/*.bin"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "小学数学出题工具"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
